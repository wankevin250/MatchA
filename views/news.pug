extends layouts/standard.pug

block head
	title Article Recommendation
	link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/5.2.3/css/bootstrap.min.css')
	link(rel='stylesheet', href='/css/news.css')
	

block content
	div(class='news-head')
		h1 Articles that matches your Interests..
	div(class='divider')
	div(class='login-inputarea')
	div(class='news-body')
		ul
			each result in results
				div(class='news-Class')
					div(class = 'news-box') 
						p #{result.headline.S}
					div(class = 'news-box') 
						p #{result.authors.S}
					div(class = 'news-box') 
						a(href = result.link.S) #{result.link.S}
					div(class = 'news-box') 
						p #{result.short_description.S}
					button.btn.btn-primary(type='submit', onclick='likeNews()', name='loginButton') Like